<h1><%= @genre.name %></h1>

<ul>
  <% @genre.movies.each do |movie| %>
    <li> <%= link_to movie.title, movie_path(movie.id) %> </li>
  <% end %>
</ul>  

<em><%= link_to 'Editar Gênero', edit_genre_path(@genre.id) %>

<em><%= link_to 'Deletar Gênero', genre_path(@genre.id), data: {turbo_method: "delete", turbo_confirm: "Tem certeza?"} %> </em>

<%= link_to 'Todos os Gêneros', genres_path %>